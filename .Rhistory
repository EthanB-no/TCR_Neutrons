clonality_annotated <- ginisimp %>%
left_join(
imm_meta %>% select(Sample, PatientID, Timepoint, Response, Dataset, UC_status),
by = "Sample"
) %>%
mutate(Timepoint = factor(Timepoint,
levels = c("Pre-TX", "Post Rad", "4 Week", "16 Week")))
